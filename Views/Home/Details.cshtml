@model WorkoutPlannerWebApp.ViewModels.WorkoutPlanDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.WorkoutProgram.Name</h1>

<div>
    <h5>@Model.WorkoutProgram.Publisher.FirstName @Model.WorkoutProgram.Publisher.LastName</h5>
    <p>Last Update: @Model.WorkoutProgram.UpdatedOn</p>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.WorkoutProgram.Difficulty)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.WorkoutProgram.Difficulty)</dd>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.WorkoutProgram.LongDescription)</dd>
    </dl>

    <table class="table table-striped table-bordered table-hover table-responsive">
      <caption>List of exercises</caption>
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Exercise</th>
          <th scope="col">Sets x Reps</th>
          <th scope="col">Description</th>
          <th scope="col">Reference Link</th>
        </tr>
      </thead>
      <tbody>
        @{
          int idx = 0;
        @foreach (var exercise in Model.WorkoutProgram.Exercises)
            {
                    idx++;
                    <tr>
                  <th scope="row">@idx</th>
                  <td>@exercise.ExerciseAPI.Name</td>
                    @if (exercise.MaxRepetition == null)
                    {
                        <td>@exercise.Sets x @exercise.MinRepetition</td>
                    } else
                    {
                        <td>@exercise.Sets x @exercise.MinRepetition - @exercise.MaxRepetition</td>  
                    }
                  <td>@exercise.ExerciseAPI.Description</td>
                  <td>@if (@exercise.ExerciseAPI.ReferenceLink != null){
                  <a href="@exercise.ExerciseAPI.ReferenceLink" target="_blank">How to perform @exercise.ExerciseAPI.Name</a>
                  } </td>
                </tr>
            }
            }
      </tbody>
    </table>
</div>
      <br />
    
<div>
    <a asp-action="Index">Back to List</a>
</div>
