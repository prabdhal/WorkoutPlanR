@model WorkoutPlannerWebApp.ViewModels.WorkoutPlansViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Workout Programs</h1>

<table class="table table-striped table-bordered table-hover table-responsive">
  <caption>List of workout programs</caption>
    <thead class="thead-dark">
        <tr>
            <th scope="col">Workout Program</th>
            <th scope="col">Difficulty</th>
            <th scope="col">Description</th>
            <th scope="col">Publisher</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkoutPrograms) {
        <tr scope="row">
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
            <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
            <td>@item.Publisher.FirstName @item.Publisher.LastName</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                  Details
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>