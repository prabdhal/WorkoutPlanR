@model WorkoutPlannerWebApp.ViewModels.MyWorkoutPlansViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Workout Plans</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover table-responsive">
  <caption>List of workout programs</caption>
    <thead class="thead-dark">
        <tr>
            <th scope="col">Workout Program</th>
            <th scope="col">Difficulty</th>
            <th scope="col">Description</th>
            <th scope="col">Last Updated</th>
            <th scope="col">Published</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkoutPrograms) {
        <tr scope="row">
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
            <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
            <td>@Html.DisplayFor(modelItem => item.UpdatedOn)</td>
            <td>@Html.DisplayFor(modelItem => item.Published)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                <form asp-action="Delete" asp-route-id="@item.Id">
                  <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
