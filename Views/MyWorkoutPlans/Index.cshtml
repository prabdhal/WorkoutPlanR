@model WorkoutPlannerWebApp.ViewModels.MyWorkoutPlansViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Workout Plans</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Plan Name
            </th>
            <th>
              Difficulty
            </th>
            <th>
              Description
            </th>
            <th>
              Last Updated
            </th>
            <th>
              Published
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkoutPrograms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @item.UpdatedOn.ToString("MM/dd/yy hh:mm tt")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                <form asp-action="Delete" asp-route-id="@item.Id">
                  <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
