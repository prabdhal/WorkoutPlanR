@model WorkoutPlannerWebApp.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Workout Programs</h1>
<br />
@if (!@Model.WorkoutPrograms.Any())
{
    <span>
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
    </span>
    <span>Create your first workout program and publish it for everyone to see!</span>
}
else
{
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
</p>
<table class="table table-striped table-hover table-responsive">
  <caption>List of workout programs</caption>
    <thead class="table-dark">
        <tr>
            <th scope="row">Workout Program</th>
            <th scope="col">Difficulty</th>
            <th scope="col">Description</th>
            <th scope="col">Published</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var program in Model.WorkoutPrograms) 
{
        <tr>
            <th scope="row">@Html.DisplayFor(modelItem => program.Name)</th>
            <td>@Html.DisplayFor(modelItem => program.Difficulty)</td>
            <td>@Html.DisplayFor(modelItem => program.Description)</td>
            <td>@Html.DisplayFor(modelItem => program.Published)</td>
            <td>
                <form asp-action="Edit" asp-route-id="@program.Id">
                  <button type="submit" formmethod="get" class="fa fa-pen text-success my-1" style="border:none;font-size:20px;"></button>
                </form>
                <form asp-action="Details" asp-route-id="@program.Id">
                  <button type="submit" formmethod="get" class="fa fa-circle-info text-primary my-1" style="border:none;font-size:20px;"></button>
                </form>
                <form asp-action="DeleteWorkoutProgram" asp-route-id="@program.Id">
                  <button type="submit" class="fa fa-trash text-danger my-1" style="border:none;font-size:20px;"></button>
                </form>
            </td>
        </tr>
}
    </tbody>
    </table>
}
