@using WorkoutPlannerWebApp.HelperMethods
@model WorkoutPlannerWebApp.ViewModels.EditMyWorkoutProgramViewModel

@{
    ViewData["Title"] = "Edit Workout Program";
}

<div class="container">
<h1>Edit Workout Program</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="WorkoutProgram.Id" readonly hidden />
            <div class="form-group">
                <label asp-for="WorkoutProgram.Name" class="control-label"></label>
                <input asp-for="WorkoutProgram.Name" class="form-control" />
                <span asp-validation-for="WorkoutProgram.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="WorkoutProgram.Difficulty" class="control-label"></label>
                <select asp-for="WorkoutProgram.Difficulty" class="form-control" asp-items="Html.GetEnumSelectList<Difficulty>()">
                  <option value="">Please choose the difficulty</option>
                </select>
                <span asp-validation-for="WorkoutProgram.Difficulty" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="WorkoutProgram.Description" class="control-label"></label>
                <input asp-for="WorkoutProgram.Description" class="form-control" />
                <span asp-validation-for="WorkoutProgram.Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="WorkoutProgram.ProgramDetails" class="control-label"></label>
                <textarea asp-for="WorkoutProgram.ProgramDetails" class="form-control" style="resize:none; min-height:200px;"></textarea>
                <span asp-validation-for="WorkoutProgram.ProgramDetails" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WorkoutProgram.Published" /> @Html.DisplayNameFor(model => model.WorkoutProgram.Published)
                </label>
            </div>
            <br />
            <div class="row justify-content-between">
                <span class="col-auto">
                    <a asp-action="Index" class="btn btn-dark">Back</a>
                </span>
                <span class="col-auto">
                    <input type="submit" value="Edit Workout Phases" class="btn btn-red" />
                </span>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
